# included by /etc/sudoers from /etc/sudoers.d
Defaults  env_keep += "SSH_AUTH_SOCK"
Defaults  env_keep += "SYSTEMD_PAGER"
Defaults  env_keep += "VAULT_ADDR"
Defaults  env_keep += "VAULT_CACERT"
Defaults  env_keep += "VAULT_TOKEN"
Defaults  env_keep += "CONSUL_HTTP_TOKEN"
Defaults  env_keep += "CONSUL_HTTP_ADDR"
Defaults  env_keep += "NOMAD_ADDR"

# Allow members of group sudo to execute any command
{% if sudoers_allow_nopasswd %}
%sudo   ALL=(ALL:ALL) NOPASSWD: ALL
{% else %}
%sudo   ALL=(ALL:ALL) ALL
{% endif %}
